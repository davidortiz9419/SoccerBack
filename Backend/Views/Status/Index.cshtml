@model IEnumerable<Domain.Status>

@{
    ViewBag.Title = "Status";
}

<h2>Status</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(s => s.Name))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StatusId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StatusId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StatusId })
            </td>
        </tr>
    }
</table>